<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=edit" />
    <link rel="stylesheet" href="../public/styles/display.css">
    <title>Purchase Requests</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h2>Track Purchase Requests</h2>

    <%request.forEach((item) => {%>

        <%if(item.status == 'Approve by Manager' ){%>

            <form action="/users/<%=currentUser%>/applications/<%=item._id%>/?_method=PUT" method="POST">
                <input type="hidden" name="action" value="approve">
                <button><span>&#10004;</span></button>
            </form> 
            <form action="/users/<%=currentUser%>/applications/<%=item._id%>/?_method=PUT" method="POST">
                <input type="hidden" name="action" value="reject">
                <button><span>&#10006;</span></button>
            </form> 
        <%}else{}%>

    
    <%})%>
    <table border="3">
        
        <tr>
            <td>#</td>
            <td>Item Title</td>
            <td>Item Description</td>
            <td>Item Quantity</td>
            <td>Delivery Date</td>
            <td>Priority</td>

            <td>Created By</td>
            <td>Created Date</td>

            <td>Approval Status</td>
        </tr>
        <%let count=0%>
        <%request.forEach((item) => {%>
            <tr>
                <td><%=count= count+1%></td>
                <td><%=item.title%></td>
                <td><%=item.description%></td>
                <td><%=item.quantity%></td>
                <td><%=item.deliverydate.toISOString().split('T')[0]%></td>
                <td><%=item.priority%></td>
                <%oneUser.forEach((oneUser) => {%>
                <td><%=oneUser.username%> </td>
                <%})%>
                <td><%=item.createdDate.toISOString().split('T')[0]%></td>
                <td>
                    <%if(item.status == null){%>
                    Pending Manager
                    <%}else{%>
                    <%=item.status%></td>
                    <%}%>
                </td>
            </tr>
        <%})%>
    </table>

</body>
</html>